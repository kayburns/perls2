<?xml version="1.0"?>
<robot name="hole_box">
    <material name="blue">
        <color rgba="0 0 0.8 1.0"/>
    </material>
    <material name="red">
        <color rgba="0.8 0 0 1.0"/>
    </material>
    <material name="green">
        <color rgba="0 0.8 0 1.0"/>
    </material>
    <material name="purple">
        <color rgba="0.8 0 0.8 1.0"/>
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <!--cylinder length="0.6" radius="0.2"/-->
                <box size="1.0 0.4 0.2"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1.0 0.4 0.2"/>
            </geometry>
        </collision>
        
    </link>

    <link name="top_short">
        <visual>
            <geometry>
                <box size="0.4 0.2 0.2"/>
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.4 0.2 0.2"/>
            </geometry>
        </collision>
        
    </link>

    <link name="bottom_short">
        <visual>
            <geometry>
                <box size="0.4 0.2 0.2"/>
            </geometry>
            <material name="purple"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.4 0.2 0.2"/>
            </geometry>
        </collision>
    </link>

    <link name="right_long">
        <visual>
            <geometry>
                <box size="1.0 0.4 0.2"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="1.0 0.4 0.2"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_top_short" type="fixed">
        <parent link="base_link"/>
        <child link="top_short"/>
        <origin xyz="0.3 0.3 0.0"/>
    </joint>

    <joint name="base_bottom_short" type="fixed">
        <parent link="base_link"/>
        <child link="bottom_short"/>
        <origin xyz="-0.3 0.3 0.0"/>
    </joint>

    <joint name="top_short_right" type="fixed">
        <parent link="top_short"/>
        <child link="right_long"/>
        <origin xyz="-0.3 0.3 0.0"/>
    </joint>
    
    
</robot>